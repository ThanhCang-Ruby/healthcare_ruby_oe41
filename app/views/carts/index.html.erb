  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-md-offset-1">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Product</th>
              <th>Start date</th>
              <th>End date</th>
              <th class="text-center">Price</th>
              <th class="text-center">Into money</th>
              <th> </th>
            </tr>
          </thead>
          <tbody>
            <% @services.each do |s| %>
            <tr>
              <td class="col-sm-8 col-md-6">
              <div class="media">
                  <a class="thumbnail pull-left" href="#"> <img class="media-object" src="http://icons.iconarchive.com/icons/custom-icon-design/flatastic-2/72/product-icon.png" style="width: 72px; height: 72px;"> </a>
                  <div class="media-body">
                      <h4 class="media-heading"><a href="#"><%= s.name %></a></h4>
                      <h5 class="media-heading"><%= s.major.name %></h5>
                  </div>
              </div></td>
              <td class="col-sm-1 col-md-1" style="text-align: center">
              <input type="date" class="form-control" value=<%= @start_date %>>
              </td>
              <td class="col-sm-1 col-md-1" style="text-align: center">
              <input type="date" class="form-control" value=<%= @end_date %>>
              </td>
              <td class="col-sm-1 col-md-1 text-center"><strong>$<%= s.price %></strong></td>
              <td class="col-sm-1 col-md-1 text-center"><strong><%= into_money_cart(s.price,@end_date, @start_date) %></strong></td>
              <td class="col-sm-1 col-md-1">
              <button type="button" class="btn btn-danger">
                  <span class="glyphicon glyphicon-remove"></span> Remove
              </button></td>
            </tr>
            <% end %>
            <tr>
              <td>   </td>
              <td>   </td>
              <td>   </td>
              <td>   </td>
              <td><h3>Total</h3></td>
              <td class="text-right"><h3><strong>$31.53</strong></h3></td>
            </tr>
            <tr>
              <td>   </td>
              <td>   </td>
              <td>   </td>
              <td>   </td>
              <td>
              <button type="button" class="btn btn-default">
                  <span class="glyphicon glyphicon-shopping-cart"></span> Continue Shopping
              </button></td>
              <td>
              <button type="button" class="btn btn-success">
                  Checkout <span class="glyphicon glyphicon-play"></span>
              </button></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
</div>
