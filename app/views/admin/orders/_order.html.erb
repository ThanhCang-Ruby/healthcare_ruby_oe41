<tbody class="order">
  <tr >
    <th colspan="2" class="table-head"><%= t "admin.manage_order.order" %><%= order.id %></th>
    <th class="table-head"><%= t "admin.manage_order.status" %><%= order.status %></th>
  </tr>
  <tr>
    <th><%= t "admin.manage_order.address" %></th>
    <th><%= order.account_address %></th>
    <th><%= link_to(t("admin.manage_order.accept"), edit_admin_order_path(id: order, status: 1), class: "btn") if order.pending?%></th>
  </tr>
  <tr >
    <th><%= t "admin.manage_order.phone_number" %></th>
    <th><%= order.account_phone_number %></th>
    <th><%= link_to(t("admin.manage_order.reject"), edit_admin_order_path(id: order, status: 5), class: "btn-danger") if order.pending?%></th>
  </tr>
  <tr>
    <th colspan="2"><%= t "admin.manage_order.total" %></th>
    <td><b><%= order.order_details.sum(:into_money) %><%= t "admin.manage_order.vnd" %></b></td>
  </tr>
  <% order.order_details.each do |order_detail| %>  
    <%= render partial: "order_detail", locals: {order_detail: order_detail}%>
  <% end %>
</tbody>

